<h1>My Tasks</h1>

<%= link_to "New Task", new_task_path, class: "btn btn-primary mb-3" %>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Details</th>
      <th>Completed</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.title, task_path(task) %></td>
        <td><%= truncate(task.details, length: 60) %></td>
        <td>
          <!-- por ahora solo mostramos el estado; no trabajes el checkbox visual -->
          <%= task.completed ? "Yes" : "No" %>
        </td>
        <td>
          <%= link_to "Edit", edit_task_path(task), class: "btn btn-sm btn-secondary" %>
          <%= link_to "Delete", task_path(task),
                      method: :delete,
                      data: { confirm: "Are you sure you want to delete this task?" },
                      class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
