<h1><%= @task.title %></h1>

<p>
  <strong>Details:</strong><br>
  <%= simple_format(@task.details) %>
</p>

<p>
  <strong>Completed:</strong>
  <% if @task.completed %>
    <i class="fa-solid fa-square-check text-success"></i>
  <% else %>
    <i class="fa-regular fa-square text-muted"></i>
  <% end %>
</p>


<%= link_to "Back to list", tasks_path, class: "btn btn-light" %>
<%= link_to "Edit", edit_task_path(@task), class: "btn btn-secondary" %>
